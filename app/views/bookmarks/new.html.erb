<div class="main-container">
  <h3>Add a movie to your list: <%= @list.name %></h3>
  <%= simple_form_for [@list, @bookmark] do |f|%>
  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.association :movie, prompt: 'Select movie', input_html: { class: 'select2' } %>
  </div>
  <div class="form-actions mt-5">
    <%= f.submit 'Add movie', class: "btn btn-info" %>
    <%= link_to 'Back to list', @list, class: "btn btn-info" %>
    <%= link_to 'Back to home', root_path, class: "btn btn-info" %>
  </div>
  <% end %>
</div>
