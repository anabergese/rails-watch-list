<div class="main-container">
  <h1 class="text-center"><%= @list.name %> movies</h1>
  <div class="grid">
  <% @bookmarks.each do |bookmark| %>
  <div class="card-trip">
    <div class="card-trip-infos">
        <%=  image_tag bookmark.movie.poster_url %>
        <h2><%= bookmark.movie.title %></h2>
        <p><strong>Overview:</strong> <%= bookmark.movie.overview %></p>
        <p><strong>Rating:</strong> <%= bookmark.movie.rating %></p>
        <p><strong>Comment:</strong> <%= bookmark.comment %></p>
        <small class= "text-right flex-shrink-0"><%= link_to "Delete a bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete #{bookmark.movie.title} from #{@list.name}"}, class: 'text-dark' %></small>
      </div>
    </div>
  <% end %>
  </div>
  <div class="card-buttons mt-5 text-center">
    <%= link_to 'Detete this list', list_path(@list), method: :delete, class: 'btn btn-info', data: { confirm: 'Are you sure you want to delete this list?' } %>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-info' %>
    <%= link_to 'Back to index', lists_path, class: 'btn btn-info' %>
  </div>
</div>
