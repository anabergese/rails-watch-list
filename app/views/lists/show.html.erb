<div class="main-container">
  <h1 class="text-center"><%= @list.name %> movies</h1>
  <div class="grid">
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <div class="card-trip">
    <div class="card-trip-infos">
        <%=  image_tag movie.poster_url %>
        <h2><%= movie.title %></h2>
        <p><strong>Overview:</strong> <%= movie.overview %></p>
        <p><strong>Rating:</strong> <%= movie.rating %></p>
        <p class= "text-right flex-shrink-0"><%= link_to "Delete a bookmark", bookmark_path(@list, @bookmark), method: :delete, class: 'text-dark' %></p>
      </div>
    </div>
  <% end %>
  </div>
  <div class="card-buttons mt-5 text-center">
    <%= link_to 'Detete this list', list_path(@list), method: :delete, class: 'btn btn-info', data: { confirm: 'Are you sure you want to delete this list?' } %>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-info' %>
    <%= link_to 'Back to index', lists_path, class: 'btn btn-info' %>
  </div>
</div>
